---
interface Props {
	iconClass: string;
    alt: string;
	href: string;
}

const {iconClass, alt} = Astro.props;
---

<div class="mr-3">
    <i class={`${iconClass} text-3xl`}  alt={alt}/>
</div>

<style>
    div {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 48px;
        height: 48px;
        border-radius: 0.3rem;
        background-color: rgb(245, 245, 245);
        box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
    }

    div:hover {
        background-color: rgb(255, 255, 255);
        box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.2);
        cursor: pointer;
    }

    img {
        display: block;
    }
</style>
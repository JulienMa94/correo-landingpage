---
import Download from "./Download.astro";
import { correo_start_page } from '../accessibility';
import SectionHeadline from "../components/SectionHeadline.astro";

---

<section id="#welcome_section" class="welcome_section">
    <div class="flex flex-col justify-center align-start 2xl:mr-6">
        <SectionHeadline title="CorreoMQTT"/>

        <p class="mb-4 mt-4">
            A modern graphical MQTT client using the HiveMQ client library. CorreoMQTT provides a UI to send and receive messages. 
        </p>

        <div class="mb-4">
            <Download />
        </div>
        
    </div>
    <div class="absolute imgContainer">
        <img src="screenshot.png" width="800" height="800" alt={correo_start_page}/>
    </div>
</section>

<style>
    .welcome_section {
        min-height: 560px;
    }

    .imgContainer {
        right: 87px;
        z-index: -1;
    }
</style>
---
import DownloadButton from "../components/DownloadButton.astro";
import NavigationLink from "../components/NavigationLink.astro";

---

<nav class="flex items-center pl-2 pr-2 pb-2 pt-2 w-full h-fit shadow-md">
    <img src="Icon_48x48.png">
    <h5 class="ml-2 text-xl font-medium">
        CorreoMQTT
    </h5>
    <div class="ml-4 flex grow">
        <NavigationLink text="Features" href="#" />
        <NavigationLink text="Documentation" href="#" />
        <NavigationLink text="Articles" href="#" />
        <NavigationLink text="Contributing" href="https://github.com/EXXETA/correomqtt/blob/develop/CONTRIBUTING.md" target="_blank" />
        <NavigationLink text="Plugins" href="https://github.com/EXXETA/correomqtt-plugins" target="_blank" />
    </div>
    <DownloadButton />
    <a href="https://github.com/EXXETA/correomqtt" target="_blank" rel="noopener noreferrer">
        <img src="github_icon.png" width="32" height="32">
    </a>
